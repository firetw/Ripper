<Window x:Class="QqPiao.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="550" Width="725" WindowState="Normal">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center"  Orientation="Vertical" Width="300" Grid.Row="0" Margin="0,50,0,0">
            <StackPanel.Resources>
                <Style TargetType="Label">
                    <Setter Property="FontSize" Value="14"></Setter>
                    <Setter Property="HorizontalAlignment" Value="Left"></Setter>
                </Style>
            </StackPanel.Resources>
            <Label Name="cityLb"></Label>
            <Label Name="timeOutLb"></Label>
            <Label Name="collectLb"></Label>
        </StackPanel>
        <TextBlock Name="tbError" HorizontalAlignment="Center" Width="517" Grid.Row="1" Height="30"  Margin="39,50,61,88"></TextBlock>
        <Button  Grid.Row="1"  HorizontalAlignment="Center"  Content="开始采集" Height="40" Width="150"   Margin="0,0,0,20"   VerticalAlignment="Bottom" Click="Button_Click"  />
    </Grid>
</Window>
